generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String  @unique
  password  String
  jwt_token String? @unique @default("")

  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("users")
}

model Products {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String @unique @default("Test Product")
  stock       Int    @default(10000)

  updated_at DateTime @updatedAt
  created_at DateTime @default(now())

  @@map("products")
}

model CheckoutLogs {
  id       String @id @default(uuid()) @map("_id")
  user_id     String
  user_email  String
  product_id  String
  product_sku String @unique

  created_at DateTime @default(now())

  @@map("checkout_logs")
}
